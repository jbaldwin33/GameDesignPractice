<Page x:Class="MyGame.StatusScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyGame"
        mc:Ignorable="d"
        Title="StatusScreen" Height="450" Width="800">
    <StackPanel Orientation="Horizontal" Height="238" HorizontalAlignment="Center" Margin="8" VerticalAlignment="Top" Width="773">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Name="lblName" Content="Name:" />
            <Label Grid.Row="1" Name="lblLevel" Content="Level:" />
            <Label Grid.Row="2" Name="lblExperience" Content="Experience:" />
            <Label Grid.Row="3" Name="lblGold" Content="Gold:" />
            <Button Grid.Row="4" Content="Cancel" Name="btnCancel" Width="75" Click="btnCancel_Click"/>
        </Grid>
    </StackPanel>
</Page>
